<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/resHouseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="House Rental Application"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentHouseIdLabel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/resHouseTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="House ID"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentHouseIdTextView"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/resHouseTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/rentHouseIdLabel"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="154"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/rentTenantNameLabel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentHouseIdLabel"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Tenant Name"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentTenantNameTextView"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentHouseIdLabel"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/rentTenantNameLabel"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Anas Barakat"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/rentPeriodLabel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentTenantNameLabel"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Rent Period"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentPeriodTextView"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentTenantNameTextView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/rentPeriodLabel"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/rentViewTenantButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentPeriodTextView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#BADCA5"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="View Tenant"
                android:textAllCaps="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#124307"
                android:textStyle="bold" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>