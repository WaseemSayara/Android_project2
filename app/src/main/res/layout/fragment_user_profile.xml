<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/backg"
    tools:context=".UserProfileFragment">


    <TextView
        android:id="@+id/emailAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="300dp"
        android:drawableLeft="@drawable/ic_email_white_24dp"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="354dp"
        android:drawableLeft="@drawable/ic_gender_white_24dp"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="412dp"
        android:drawableLeft="@drawable/ic_location_on_white_24dp"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="497dp"
        android:drawableLeft="@drawable/ic_call_white_24dp"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/occupationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="543dp"
        android:drawableLeft="@drawable/ic_baseline_work_24"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/salaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="597dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/familySizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="645dp"
        android:drawableLeft="@drawable/ic_baseline_family_restroom_24"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/nationalityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="452dp"
        android:drawableLeft="@drawable/ic_baseline_flag_24"
        android:drawablePadding="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/userLogoImageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/maleuser" />

    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="214dp"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/updateFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:src="@drawable/ic_edit_white_36dp" />

</RelativeLayout>