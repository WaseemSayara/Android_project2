<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPropertiesFragment" >


    <EditText
        android:id="@+id/Post_City_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Post_Postal_Address_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Postal Address"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Post_Surface_Area_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Surface Area"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Post_Construction_Year_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Construction Year"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Post_Bedrooms_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Number Of Bedrooms"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Post_Price_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Rental Price"
        android:inputType="number"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/Post_Status_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Post_Status_UnRented_radioButton"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="65dp"
                android:checked="true"
                android:text="Un Rented"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/Post_Status_Rented_radioButton"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Rented"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Furnished ?"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/Post_furnished_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Post_furnished_radioButton"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="65dp"
                android:checked="true"
                android:text="Furnished"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/Post_unfurnished_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UnFurnished"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Photo"
            android:textSize="24sp" />

        <Button
            android:id="@+id/Take_Photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take Photo" />

        <Button
            android:id="@+id/Choose_Photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose Photo From Gallary" />
    </LinearLayout>

    <EditText
        android:id="@+id/Post_editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Availability Date"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Post_Description_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Property Description"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/Post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post" />

</LinearLayout>